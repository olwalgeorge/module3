# CSE310 Module 3 Environment Variables

# Node.js Environment
NODE_ENV=development

# Application Settings
APP_NAME=CSE310_Module3
APP_VERSION=1.0.0

# Database (if needed for future projects)
# DATABASE_URL=your_database_url_here

# API Keys (if needed for future projects)
# API_KEY=your_api_key_here

# Local Development Settings
PORT=3000
HOST=localhost

# Assignment Configuration
ASSIGNMENT_MODULE=3
COURSE=CSE310

# Target Project Directory
INVENTORY_PROJECT_PATH=./inventory

# Development Tools
DEBUG=false
VERBOSE_LOGGING=false

# Build Configuration
BUILD_OUTPUT=dist
SOURCE_MAP=true

# Testing Configuration
TEST_TIMEOUT=10000
COVERAGE_THRESHOLD=80

# Linting and Code Quality
LINT_ON_SAVE=true
FORMAT_ON_SAVE=true

# Git Configuration
GIT_IGNORE_INVENTORY=true

# Editor Configuration
EDITOR_CONFIG=vscode
TAB_SIZE=2
INSERT_FINAL_NEWLINE=true

# Project Specific Settings
INVENTORY_SYSTEM_ENABLED=true
DOCUMENTATION_AUTO_GENERATE=true
