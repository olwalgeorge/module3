# CSE310 Module 3 Environment Variables

# Node.js Environment
NODE_ENV=development

# Application Settings
APP_NAME=CSE310_Module3
APP_VERSION=1.0.0

# Supabase Database Configuration (REQUIRED)
POSTGRES_URL="your_postgres_connection_string"
POSTGRES_USER="postgres"
POSTGRES_HOST="your_supabase_host"
POSTGRES_PASSWORD="your_postgres_password"
POSTGRES_DATABASE="postgres"
POSTGRES_PRISMA_URL="your_prisma_connection_string"
POSTGRES_URL_NON_POOLING="your_non_pooling_connection_string"

# Supabase Authentication & API (REQUIRED)
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key"
VITE_SUPABASE_URL="https://your-project-ref.supabase.co"
VITE_SUPABASE_ANON_KEY="your_supabase_anon_key"

# Local Development Settings
PORT=3000
HOST=localhost

# Assignment Configuration
ASSIGNMENT_MODULE=3
COURSE=CSE310

# Target Project Directory
INVENTORY_PROJECT_PATH=./inventory

# Development Tools
DEBUG=false
VERBOSE_LOGGING=false

# Security Settings
JWT_SECRET="your_jwt_secret_key"
CORS_ORIGIN="http://localhost:5173"
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"
UPLOAD_PATH="./uploads"

# Build Configuration
BUILD_OUTPUT=dist
SOURCE_MAP=true

# Testing Configuration
TEST_TIMEOUT=10000
COVERAGE_THRESHOLD=80

# Linting and Code Quality
LINT_ON_SAVE=true
FORMAT_ON_SAVE=true

# Git Configuration
GIT_IGNORE_INVENTORY=true

# Editor Configuration
EDITOR_CONFIG=vscode
TAB_SIZE=2
INSERT_FINAL_NEWLINE=true

# Project Specific Settings
INVENTORY_SYSTEM_ENABLED=true
DOCUMENTATION_AUTO_GENERATE=true
